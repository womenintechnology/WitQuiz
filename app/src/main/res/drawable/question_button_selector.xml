<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <gradient android:startColor="#ccffffff" android:endColor="#ccD9DDDE" android:angle="90"></gradient>
            <corners android:radius="15dip"></corners>
            <solid android:color="#ccD9DDDE"/>
        </shape>

    </item>

    <item  android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ccffffff" android:endColor="#ccD9DDDE" android:angle="90"></gradient>
            <corners android:radius="15dip"> </corners>
            <stroke android:color="#ccD9DDDE" android:width="1dp"></stroke>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ccffffff" android:endColor="#ccD9DDDE" android:angle="90"></gradient>
            <corners android:radius="15dip"> </corners>
            <stroke android:color="#ccD9DDDE" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>
